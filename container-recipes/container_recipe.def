Bootstrap: docker
From: rockylinux/rockylinux:10

%files 
requirements.txt /opt/requirements.txt

%post
    # Update system packages
    dnf update -y && dnf install -y \
        python3 \
        python3-pip \
        && dnf clean all

    # Install Python packages
    pip3 install --upgrade pip
    pip3 install -r /opt/requirements.txt